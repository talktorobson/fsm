# ----------------------------------------------------------------------------
# Twilio SMS Configuration
# ----------------------------------------------------------------------------
# Enable/disable Twilio SMS integration
TWILIO_ENABLED=false

# Twilio account SID (get from https://console.twilio.com/)
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Twilio auth token (get from https://console.twilio.com/)
TWILIO_AUTH_TOKEN=your_auth_token_here

# Twilio phone number (E.164 format: +15555555555)
TWILIO_PHONE_NUMBER=+15555555555

# ----------------------------------------------------------------------------
# SendGrid Email Configuration
# ----------------------------------------------------------------------------
# Enable/disable SendGrid email integration
SENDGRID_ENABLED=false

# SendGrid API key (get from https://app.sendgrid.com/settings/api_keys)
SENDGRID_API_KEY=SG.xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Email address to send from
SENDGRID_FROM_EMAIL=noreply@yellowgrid.com

# Display name for sender
SENDGRID_FROM_NAME=Yellow Grid Platform

# ----------------------------------------------------------------------------
# Firebase Cloud Messaging (Push Notifications) - TODO
# ----------------------------------------------------------------------------
